{
  "info": {
    "name": "DevSync API Collection",
    "description": "Complete API collection for DevSync collaborative coding platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "apiUrl",
      "value": "{{baseUrl}}/api/v1",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "roomId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', responseJson.data.accessToken);",
                  "    pm.collectionVariables.set('userId', responseJson.data.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/auth/register",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', responseJson.data.accessToken);",
                  "    pm.collectionVariables.set('userId', responseJson.data.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/auth/login",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/auth/me",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/auth/verify",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "verify"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/auth/refresh",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/auth/logout",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        },
        {
          "name": "Google OAuth URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{apiUrl}}/auth/google",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "google"]
            }
          }
        },
        {
          "name": "GitHub OAuth URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{apiUrl}}/auth/github",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "github"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/users/profile",
              "host": ["{{apiUrl}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"updateduser\",\n  \"avatar\": \"https://example.com/avatar.jpg\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/users/profile",
              "host": ["{{apiUrl}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/users/change-password",
              "host": ["{{apiUrl}}"],
              "path": ["users", "change-password"]
            }
          }
        },
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/users/search?q=test&limit=10",
              "host": ["{{apiUrl}}"],
              "path": ["users", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "test"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get User Rooms",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/users/rooms",
              "host": ["{{apiUrl}}"],
              "path": ["users", "rooms"]
            }
          }
        },
        {
          "name": "Delete Account",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/users/account",
              "host": ["{{apiUrl}}"],
              "path": ["users", "account"]
            }
          }
        }
      ]
    },
    {
      "name": "Room Management",
      "item": [
        {
          "name": "Create Room",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('roomId', responseJson.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Coding Room\",\n  \"description\": \"A room for collaborative coding\",\n  \"isPrivate\": false,\n  \"maxMembers\": 10\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/rooms/create",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "create"]
            }
          }
        },
        {
          "name": "Get Room Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/rooms/{{roomId}}",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "{{roomId}}"]
            }
          }
        },
        {
          "name": "Update Room",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Room Name\",\n  \"description\": \"Updated description\",\n  \"isPrivate\": true,\n  \"maxMembers\": 15\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/rooms/{{roomId}}",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "{{roomId}}"]
            }
          }
        },
        {
          "name": "Join Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"inviteCode\": \"ABC123\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/rooms/join",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "join"]
            }
          }
        },
        {
          "name": "Get Room Members",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/rooms/{{roomId}}/members",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "{{roomId}}", "members"]
            }
          }
        },
        {
          "name": "Update Member Role",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"MEMBER\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/rooms/{{roomId}}/members/{{userId}}",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "{{roomId}}", "members", "{{userId}}"]
            }
          }
        },
        {
          "name": "Kick Member",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/rooms/{{roomId}}/members/{{userId}}",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "{{roomId}}", "members", "{{userId}}"]
            }
          }
        },
        {
          "name": "Leave Room",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/rooms/{{roomId}}/leave",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "{{roomId}}", "leave"]
            }
