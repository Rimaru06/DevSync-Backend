        },
        {
          "name": "Delete Room",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/rooms/{{roomId}}",
              "host": ["{{apiUrl}}"],
              "path": ["rooms", "{{roomId}}"]
            }
          }
        }
      ]
    }
  ]
}
